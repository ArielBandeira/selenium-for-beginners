<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="ExceptionsTests" verbose="1" >

    <test name="NoSuchElementException">
        <parameter name="browser" value="edge"></parameter>
        <classes>
            <class name="com.herokuapp.theinternet.NoSuchElementExceptionTest">
                <methods>
                    <include name="addNewRowTest" />
                </methods>
            </class>
        </classes>
    </test>

    <test name="ElementNotInteractableException">
        <parameter name="browser" value="edge"></parameter>
        <classes>
            <class name="com.herokuapp.theinternet.ElementNotInteractableExceptionTest">
                <methods>
                    <include name="textIsSavedTest" />
                </methods>
            </class>
        </classes>
    </test>

    <test name="InvalidElementStateException">
        <parameter name="browser" value="edge"></parameter>
        <classes>
            <class name="com.herokuapp.theinternet.InvalidElementStateExceptionTest">
                <methods>
                    <include name="editInputTextTest" />
                </methods>
            </class>
        </classes>
    </test>

    <test name="StaleElementReferenceException">
        <parameter name="browser" value="edge"></parameter>
        <classes>
            <class name="com.herokuapp.theinternet.StaleElementReferenceExceptionTest">
                <methods>
                    <include name="instructionsTextIsHiddenTest" />
                </methods>
            </class>
        </classes>
    </test>

    <test name="TimeoutException">
        <parameter name="browser" value="edge"></parameter>
        <classes>
            <class name="com.herokuapp.theinternet.TimeoutExceptionTest">
                <methods>
                    <include name="clickAddButtonTest" />
                </methods>
            </class>
        </classes>
    </test>

</suite>
